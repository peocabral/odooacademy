<odoo>
    <!-- form view -->
    <record model="ir.ui.view" id = "course_form_view">
        <field name="name">course.form</field>
        <field name="model">odooacademy.course</field>
        <field name="arch" type = "xml">            
            <form string = "Course Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="responsible_id"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string = "Sessions">
                            <field name="session_ids">
                                <tree string="Registered sessions">
                                    <field name="name"/>
                                    <field name="instructor_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

<!-- Search View -->
    <record model = "ir.ui.view" id = "course_search_view">
        <field name = "name">course.search</field>
        <field name = "model">odooacademy.course</field>
        <field name = "arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!--window action -->
    <record model = "ir.actions.act_window" id = "course_list_action">
        <field name = "name">Courses</field>
        <field name = "res_model">odooacademy.course</field>
        <field name = "view_type">form</field>
        <field name = "view_mode">tree,form</field>
        <field name = "help" type="html">
            <p class = "oe_view_nocontent_smiling_face">Create the first course
            </p>
        </field>
    </record>
    
    <!-- View for a Session -->
    <record model = "ir.ui.view" id = "session_form_view">
        <field name = "name">session.form</field>
        <field name = "model">odooacademy.session</field>
        <field name = "arch" type = "xml">
            <form string = "Session Form">
                <sheet>
                    <group>
                        <group string="General">
                            <field name = "course_id"/>
                            <field name = "name"/>
                            <field name = "instructor_id"/>
                        </group>
                        <group string= "Schedule">
                            <field name = "start_date"/>
                            <field name = "duration"/>
                            <field name = "seats"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model = "ir.actions.act_window" id = "session_list_action">
        <field name = "name">Session</field>
        <field name = "res_model">odooacademy.session</field>
        <field name = "view_type">form</field>
        <field name = "view_mode">tree,form</field>
    </record>
    
    <record model="ir.ui.view" id="courses_tree_view">
        <field name="name">course.tree</field>
        <field name="model">odooacademy.course</field>
        <field name="arch" type="xml">
            <tree string="Course Tree">
                <field name="name"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">session.tree</field>
        <field name="model">odooacademy.session</field>
        <field name="arch" type="xml">
            <tree string="Session Tree">
                <field name="name"/>
                <field name="course_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="session_list_action">
        <field name="name">Sessions</field>
        <field name="res_model">odooacademy.session</field>
    </record>   
    <menuitem id = "session_menu" name = "Sessions" parent = "odooacademy_menu" action = "session_list_action"/>
    <menuitem id="main_odooacademy_menu" name="Open Academy"/>
    <menuitem id="odooacademy_menu" name="Open Academy" parent="main_odooacademy_menu"/>
    <menuitem id="courses_menu" name="Courses" parent="odooacademy_menu" action="course_list_action"/>

</odoo>